@model IEnumerable<Esel.Models.MovieModel> 

@foreach (var film in Model )
{


    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-3">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@film.Id"><img src="@film.ImageUrl" alt="@film.Description" class="card-img" /></a>
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h4 class="card-title">
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@film.Id">@film.Name</a>
                    </h4>
                    <p class="card-text">@film.Description</p>
                    <div class="imdb">
                        <span class="imdbRatingPlugin" style="float:right;"  data-title="@film.IMDbStar" data-style="p1"><a href="https://www.imdb.com/title/@film.IMDbStar/?ref_=plg_rt_1"><img src="https://ia.media-imdb.com/images/G/01/imdb/plugins/rating/images/imdb_46x22.png" alt=" @film.Name" /></a></span><script>(function(d,s,id){var js,stags=d.getElementsByTagName(s)[0];if(d.getElementById(id)){return;}js=d.createElement(s);js.id=id;js.src="https://ia.media-imdb.com/images/G/01/imdb/plugins/rating/js/rating.js";stags.parentNode.insertBefore(js,stags);})(document,"script","imdb-rating-api");</script>                   
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@film.Id" class="btn-sm  float-left" style="text-decoration:none; background-color: deeppink; color: #000000;"><b>Detaylar</b></a>
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@film.Id" class="btn-sm  float-left" style="text-decoration:none; background-color: red; color: #000000;"><b>Filmi Sil</b></a>

                    </div>
                </div>
            </div>
        </div>
    </div>
 
}



